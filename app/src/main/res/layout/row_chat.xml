<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color3"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LinearLayoutReceiverInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="center_horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ChatProfileUserCircleImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/lightgray"/>
        <TextView
            android:id="@+id/chatProfileUserName2"
            android:text="s"
            android:maxLines="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/color6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/LinearLayoutReceiverInfo"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ChatRowCircleIV"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/lightgray"/>
    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_below="@+id/LinearLayoutReceiverInfo"
        android:id="@+id/receiverLinearLayout"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/ChatRowCircleIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pattern_receiverusermessages"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="1dp"
            android:id="@+id/receiverMessageTextView"
            android:text="s"
            android:maxWidth="230dp"
            android:textSize="16sp"
            android:textColor="@color/color11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/receiverMessageTextView"
            android:layout_gravity="right"
            android:text="16:14"
            android:textSize="10sp"
            android:textColor="@color/color11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/LinearLayoutReceiverInfo"
            android:background="@drawable/custom_input"
            android:id="@+id/ChatReceiverDelete"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="Benden Sil"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@+id/LinearLayoutReceiverInfo"
        android:id="@+id/senderLinearLayout"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pattern_getcurrentusermessages"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="1dp"
            android:id="@+id/senderMessageTextView"
            android:text="s"
            android:maxWidth="230dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/senderMessageTextView"
            android:layout_gravity="right"
            android:text="16:14"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ChatDeleteMenu"
   android:visibility="gone"
        android:background="@drawable/custom_input"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/LinearLayoutReceiverInfo"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ChatSenderDelete"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:text="Benden Sil"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ChatEveryoneDelete"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="Herkesten Sil"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>