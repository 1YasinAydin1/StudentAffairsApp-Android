<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RowUserRelativeLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_marginTop="18dp"
    android:paddingEnd="20dp"
    android:paddingStart="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/UserRowCircleIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/logoColor"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/UserRowCircleIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/UserRowUserNameLastNameTextView"
            android:text="Kullanıcı Adı"
            android:maxLines="1"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#4a4b46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/UserRowUserNameTextView"
            android:text="Ad Ssafffffffffffffoysaffffffad"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            android:textSize="17dp"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <Button
        android:layout_centerVertical="true"
        android:id="@+id/FollowButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Takip Et"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/custom_button"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>