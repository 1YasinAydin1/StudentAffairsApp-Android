<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/PostSalesTitleTextView"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="Sahibinden Laregox Laregox Laregox Laregox Laregox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.viewpager.widget.ViewPager
                    android:background="@color/white"
                    android:id="@+id/PostSalesViewPager"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_below="@+id/PostSalesPriceTextView"
                        android:layout_alignParentRight="true"
                        android:id="@+id/LikeLinearLayout"
                        android:background="@drawable/postsaleslike"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/PostSalesLikeImageView"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_sales_post_like" />
                        <ImageView
                            android:layout_marginVertical="8dp"
                            android:id="@+id/PostSalesCommentaryImageView"
                            android:layout_width="35dp"
                            android:layout_height="35dp"

                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_sales_post_comment" />
                        <ImageView
                            android:id="@+id/PostSalesFavoriteImageView"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_sales_post_favorite" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/PostSalesPriceTextView"
                        android:text="155 TL"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="21sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_toStartOf="@+id/LikeLinearLayout"
                        android:layout_below="@+id/PostSalesPriceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="120dp">
                        <TextView
                            android:background="@drawable/postcommentbackground"
                            android:id="@+id/PostSalesCommentTextView"
                            android:text="Temiz"
                            android:lineSpacingExtra="2dp"
                            android:gravity="center"
                            android:padding="20dp"

                            android:textSize="16sp"
                            android:layout_marginEnd="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="140dp"/>
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/postsalesbackground"
                    android:elevation="1dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/CategoryLinearLayout1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/PostCCName1"
                            android:text="Kimden"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/PostCCReturnName1"
                            android:layout_gravity="center"
                            android:text="Kimden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="50dp"
                        android:id="@+id/CategoryLinearLayout2"
                        android:layout_toEndOf="@+id/CategoryLinearLayout1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/PostCCName2"
                            android:text="Kimden"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/PostCCReturnName2"
                            android:layout_gravity="center"
                            android:text="Kimden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="50dp"
                        android:id="@+id/CategoryLinearLayout3"
                        android:layout_toEndOf="@+id/CategoryLinearLayout2"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/PostCCName3"
                            android:text="Kimden"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/PostCCReturnName3"
                            android:layout_gravity="center"
                            android:text="Kimden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginVertical="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/PostSaleCategoryTextView"
                        android:text="Kategori : Emlak"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toEndOf="@+id/PostSaleCategoryTextView"
                        android:id="@+id/Line"
                        android:text=" | "
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toEndOf="@+id/Line"
                        android:id="@+id/PostSalesDateTextView"
                        android:text="16 Aralık 2020"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toEndOf="@+id/PostSalesDateTextView"
                        android:id="@+id/Line2"
                        android:text=" | "
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toEndOf="@+id/Line2"
                        android:id="@+id/PostSalesTimeTextView"
                        android:text="16:20"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="-15dp"
                    android:id="@+id/PostSalesGoToMessage"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:background="@drawable/custom_input1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/PostSalesUserCircleIV"
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="3dp"
                            android:src="@mipmap/ic_launcher"
                            app:civ_border_color="@color/lightgray"
                            app:civ_border_width="2dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/PostSalesUserNameTextView"
                            android:text="deepjoke"
                            android:layout_marginStart="15dp"
                            android:textStyle="bold"
                            android:maxWidth="150dp"
                            android:maxLines="1"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textColor="@color/darkgray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/PostSalesRandomTextView"
                            android:text="ile iletişime geç!"
                            android:layout_marginStart="6dp"
                            android:textSize="18sp"
                            android:layout_toEndOf="@+id/PostSalesUserNameTextView"

                            android:textColor="@color/darkgray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
