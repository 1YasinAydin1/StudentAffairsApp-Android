<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PostSalesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:id="@+id/PostSalesFilterRelativeLayout"
            android:elevation="16dp"
            android:layout_width="match_parent"
            android:paddingEnd="20dp"
            android:layout_height="60dp">

            <Spinner
                android:id="@+id/PostSpinnerOrderBy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:entries="@array/OrderBy"
                />
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/PostSalesFilterDelete"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/ic_filter_delete"
                    android:layout_marginVertical="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/PostSalesFilterDeleteTextView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/PostSalesFilterDeleteTextView"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:textColor="#CD5050"
                    android:fontFamily="sans-serif-light"
                    android:text="Filtreyi KaldÄ±r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight=".5"
                android:id="@+id/PostSalesFilterButton"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/ic_filter"
                    android:layout_marginVertical="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/PostSalesFilterTextView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/PostSalesFilterTextView"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textColor="#CD5050"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Filtre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
android:visibility="gone"
            android:layout_below="@+id/PostSalesFilterRelativeLayout"
            android:id="@+id/PostSalesCategory"
            android:layout_width="match_parent"
            android:layout_margin="50dp"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/PostSalesCategorySpinner"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_spinner"
                android:popupBackground="@drawable/custom_spinner_dropdown"
                android:layout_height="40dp"/>
            <LinearLayout
                android:layout_below="@+id/PostSalesCategorySpinner"
                android:id="@+id/TagLinearLayout"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:background="@drawable/custom_spinner"
                    android:popupBackground="@drawable/custom_spinner_dropdown"
                    android:layout_weight=".5"
                    android:splitMotionEvents="true"
                    android:id="@+id/PostSpinnerVol1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginVertical="20dp" />
                <Spinner
                    android:background="@drawable/custom_spinner"
                    android:popupBackground="@drawable/custom_spinner_dropdown"
                    android:layout_weight=".5"
                    android:id="@+id/PostSpinnerVol2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"

                    android:textAlignment="center"
                    android:layout_marginVertical="20dp" />
                <Spinner
                    android:background="@drawable/custom_spinner"
                    android:popupBackground="@drawable/custom_spinner_dropdown"
                    android:layout_weight=".5"
                    android:id="@+id/PostSpinnerVol3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginVertical="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="70dp"
                android:id="@+id/PostSalesLinearLayout"
                android:layout_below="@+id/TagLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:shadowColor="@color/salesRed"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="10"
                        android:text="Min TL"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textAlignment="center"
                       android:textColor="@color/red"
                       android:shadowColor="@color/salesRed"
                       android:shadowDx="1"
                       android:shadowDy="1"
                       android:shadowRadius="10"
                       android:text="Max TL"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/PostSalesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/PostSalesPriceMinEditText"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/PostSalesPriceMaxEditText"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:background="@drawable/custom_close_button"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:shadowColor="@color/red"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Ara"
                android:id="@+id/PostSalesCategoryClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView

            android:background="?android:attr/windowBackground"
            android:layout_below="@+id/PostSalesFilterRelativeLayout"
            android:id="@+id/SearchPostSalesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</FrameLayout>