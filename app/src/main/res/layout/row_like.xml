<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/LikeUserRowCircleIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/lightgray"/>
    <LinearLayout
        android:layout_toEndOf="@+id/LikeUserRowCircleIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/LikeRowUserNameTextView"
            android:text="Ad Soyad"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/LikeRowText"
            android:text="Kullanıcı Adı"
            android:maxLines="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/darkgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/LikePostImage"
        android:src="@drawable/logo"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>